<?xml version="1.0" encoding="utf-8" ?>
<ViewCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
		  xmlns:dashboard="clr-namespace:GeoAlert.App.Features.Dashboard"
		  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		  x:Class="GeoAlert.App.Features.Dashboard.PointCell">
	<Border>
		<Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
			<Label x:Name="LblTitle" Style="{StaticResource TitleLabelStyle}"
				   Grid.Row="0" Grid.ColumnSpan="2"
				   HorizontalTextAlignment="Center" />

			<Label Grid.Row="1" Grid.Column="0"
				   Text="{Static dashboard:Text.Coordinates}"
				   HorizontalTextAlignment="End" />

			<Label x:Name="LblCoordinates"
				   Grid.Row="1" Grid.Column="1"
				   HorizontalTextAlignment="Start" />

		</Grid>
	</Border>
</ViewCell>
